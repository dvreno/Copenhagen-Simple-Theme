<div class="dashboard-container">
  {{!-- System Alerts Banner --}}
  {{#if help_center.system_alerts}}
    <div class="system-alerts-banner" id="system-alerts">
      <div class="container">
        <div class="alert-content">
          <svg class="alert-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <div class="alert-messages" id="alert-messages">
            <!-- Alerts loaded via JS -->
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  <div class="container">
    <div class="dashboard-grid">
      
      {{!-- Main Column --}}
      <main class="dashboard-main">
        
        {{!-- Hero Section with Search --}}
        <section class="dashboard-hero">
          <div class="hero-content">
            <div class="hero-search">
              <h1 class="hero-title">{{t 'how_can_we_help'}}</h1>
              {{search scoped=settings.scoped_kb_search submit=true class='hero-search-form'}}
              <div class="search-suggestions" id="search-suggestions">
                <!-- Populated via JS -->
              </div>
            </div>
            <div class="hero-actions">
              <div class="cta-card">
                <a href="{{new_request_url}}" class="cta-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path>
                  </svg>
                  <span>Submit Request</span>
                </a>
                <p class="cta-description">Get help from our support team</p>
              </div>
              <div class="cta-card">
                <a href="/hc/{{locale}}/articles/360001234567" class="cta-secondary" id="system-status-link">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                  </svg>
                  <span>System Status</span>
                </a>
                <p class="cta-description">Check service availability</p>
              </div>
            </div>
          </div>
        </section>

        {{!-- Favorites Strip (if user has favorites) --}}
        <section class="dashboard-favorites" id="favorites-section" style="display:none;">
          <h2 class="section-title">Quick Access</h2>
          <div class="favorites-grid" id="favorites-grid">
            <!-- Populated via JS -->
          </div>
        </section>

        {{!-- My Work Section --}}
        <section class="dashboard-my-work">
          <div class="section-header">
            <h2 class="section-title">My Work</h2>
            <div class="work-filters">
              <button class="filter-btn active" data-filter="open">Open</button>
              <button class="filter-btn" data-filter="all">All</button>
              <button class="filter-btn" data-filter="pending">Pending</button>
            </div>
          </div>
          
          <div class="work-grid">
            <div class="work-column">
              <h3 class="work-subtitle">My Tickets</h3>
              <div class="ticket-list" id="my-tickets">
                <div class="loading-spinner">Loading...</div>
              </div>
              <a href="{{my_activities_url}}" class="view-all-link">View all my tickets →</a>
            </div>
            
            <div class="work-column">
              <h3 class="work-subtitle">County Tickets</h3>
              <div class="ticket-list" id="county-tickets">
                <div class="loading-spinner">Loading...</div>
              </div>
              <a href="/hc/requests?query=organization" class="view-all-link">View all county tickets →</a>
            </div>
          </div>
        </section>

        {{!-- Knowledge Hub --}}
        <section class="dashboard-knowledge">
          <div class="section-header">
            <h2 class="section-title">Knowledge Hub</h2>
            <nav class="hub-tabs">
              <button class="tab-btn active" data-tab="featured">Featured</button>
              <button class="tab-btn" data-tab="categories">Categories</button>
              <button class="tab-btn" data-tab="recent">Recent</button>
            </nav>
          </div>
          
          <div class="knowledge-content">
            <div class="tab-panel active" id="featured-panel">
              <div class="article-grid">
                {{#each categories}}
                  {{#if promoted}}
                    {{#each sections}}
                      {{#each articles}}
                        {{#if promoted}}
                          <article class="kb-card">
                            <div class="kb-card-icon">
                              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                              </svg>
                            </div>
                            <h4><a href="{{url}}">{{title}}</a></h4>
                            <p class="kb-meta">{{section.name}}</p>
                          </article>
                        {{/if}}
                      {{/each}}
                    {{/each}}
                  {{/if}}
                {{/each}}
              </div>
            </div>
            
            <div class="tab-panel" id="categories-panel">
              <div class="category-grid">
                {{#each categories}}
                  <div class="category-card">
                    <h4><a href="{{url}}">{{name}}</a></h4>
                    <p class="category-count">{{section_count}} sections</p>
                  </div>
                {{/each}}
              </div>
            </div>
            
            <div class="tab-panel" id="recent-panel">
              <div class="article-list" id="recent-articles">
                <!-- Populated via JS -->
              </div>
            </div>
          </div>
        </section>

        {{!-- Training Hub --}}
        <section class="dashboard-training">
          <div class="section-header">
            <h2 class="section-title">Training Hub</h2>
            <a href="/hc/{{locale}}/categories/360000000000-Training" class="section-link">View all training →</a>
          </div>
          
          <div class="training-grid">
            <div class="training-card">
              <div class="training-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polygon points="10 8 16 12 10 16 10 8"></polygon>
                </svg>
              </div>
              <h3>Getting Started</h3>
              <p>Essential guides for new users</p>
              <a href="/hc/{{locale}}/sections/360000000001" class="card-link">Start learning →</a>
            </div>
            
            <div class="training-card">
              <div class="training-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
                </svg>
              </div>
              <h3>New & Updated</h3>
              <p>Latest training materials</p>
              <a href="/hc/{{locale}}/sections/360000000002" class="card-link">What's new →</a>
            </div>
            
            <div class="training-card">
              <div class="training-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                  <line x1="8" y1="21" x2="16" y2="21"></line>
                  <line x1="12" y1="17" x2="12" y2="21"></line>
                </svg>
              </div>
              <h3>Video Library</h3>
              <p>Visual tutorials and demos</p>
              <a href="/hc/{{locale}}/sections/360000000003" class="card-link">Watch videos →</a>
            </div>
          </div>
        </section>

        {{!-- Community Activity --}}
        {{#if help_center.community_enabled}}
        <section class="dashboard-community">
          <div class="section-header">
            <h2 class="section-title">Community Activity</h2>
            <a href="{{community_url}}" class="section-link">Visit community →</a>
          </div>
          
          <div class="community-grid">
            <div class="community-column">
              <h3 class="community-subtitle">Latest Questions</h3>
              <div class="community-list" id="community-questions">
                <!-- Populated via JS -->
              </div>
            </div>
            
            <div class="community-column">
              <h3 class="community-subtitle">Top Contributors</h3>
              <div class="community-list" id="community-contributors">
                <!-- Populated via JS -->
              </div>
            </div>
          </div>
        </section>
        {{/if}}

        {{!-- Election Calendar --}}
        <section class="dashboard-calendar">
          <div class="section-header">
            <h2 class="section-title">Election Calendar</h2>
            <div class="calendar-actions">
              <button class="btn-icon" id="calendar-subscribe" title="Subscribe to calendar">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
              </button>
            </div>
          </div>
          
          <div class="calendar-container">
            <div class="calendar-view" id="calendar-widget">
              <!-- Calendar populated via JS -->
            </div>
            <div class="calendar-agenda">
              <h3>Upcoming Events</h3>
              <div class="agenda-list" id="agenda-list">
                <!-- Populated via JS -->
              </div>
            </div>
          </div>
        </section>

        {{!-- Updates Feed --}}
        <section class="dashboard-updates">
          <div class="section-header">
            <h2 class="section-title">Updates Feed</h2>
            <div class="update-filters">
              <button class="chip-filter active" data-category="all">All</button>
              <button class="chip-filter" data-category="policy">Policy</button>
              <button class="chip-filter" data-category="release">Release Notes</button>
              <button class="chip-filter" data-category="training">Training</button>
              <button class="chip-filter" data-category="community">Community</button>
            </div>
          </div>
          
          <div class="updates-list" id="updates-feed">
            <!-- Populated via JS -->
          </div>
        </section>

      </main>

      {{!-- Right Rail --}}
      <aside class="dashboard-sidebar">
        
        {{!-- Quick Links --}}
        <div class="sidebar-widget">
          <h3 class="widget-title">Quick Links</h3>
          <nav class="quick-links">
            <a href="{{new_request_url}}" class="quick-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
              </svg>
              Submit Request
            </a>
            <a href="{{my_activities_url}}" class="quick-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
              </svg>
              My Tickets
            </a>
            <a href="/hc/{{locale}}/p/system-status" class="quick-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
              </svg>
              System Status
            </a>
            <a href="/hc/{{locale}}/categories/360000000000-Training" class="quick-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polygon points="10 8 16 12 10 16 10 8"></polygon>
              </svg>
              Training
            </a>
            {{#if help_center.community_enabled}}
            <a href="{{community_url}}" class="quick-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              Community
            </a>
            {{/if}}
          </nav>
        </div>

        {{!-- Status Snapshot --}}
        <div class="sidebar-widget">
          <h3 class="widget-title">Status Snapshot</h3>
          <div class="status-grid" id="status-snapshot">
            <div class="status-item">
              <span class="status-indicator status-operational"></span>
              <span class="status-label">VREMS Core</span>
            </div>
            <div class="status-item">
              <span class="status-indicator status-operational"></span>
              <span class="status-label">Reporting</span>
            </div>
            <div class="status-item">
              <span class="status-indicator status-maintenance"></span>
              <span class="status-label">Training Portal</span>
            </div>
            <div class="status-item">
              <span class="status-indicator status-operational"></span>
              <span class="status-label">API Services</span>
            </div>
          </div>
          <a href="/hc/{{locale}}/p/system-status" class="widget-link">View detailed status →</a>
        </div>

        {{!-- Due This Week --}}
        <div class="sidebar-widget">
          <h3 class="widget-title">Due This Week</h3>
          <div class="due-list" id="due-this-week">
            <!-- Populated via JS -->
          </div>
          <a href="#calendar-widget" class="widget-link">View full calendar →</a>
        </div>

        {{!-- Popular This Week --}}
        <div class="sidebar-widget">
          <h3 class="widget-title">Popular This Week</h3>
          <div class="popular-list" id="popular-articles">
            <!-- Populated via JS -->
          </div>
          <a href="/hc/{{locale}}/articles/popular" class="widget-link">View all popular →</a>
        </div>

        {{!-- Help Widget --}}
        <div class="sidebar-widget widget-help">
          <h3 class="widget-title">Need Help?</h3>
          <p>Our support team is here to assist you.</p>
          <a href="{{new_request_url}}" class="btn btn-primary btn-block">Contact Support</a>
          <div class="help-hours">
            <small>Monday - Friday: 8:00 AM - 5:00 PM PST</small>
          </div>
        </div>

      </aside>
    </div>
  </div>
</div>